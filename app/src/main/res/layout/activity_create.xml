<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hpf.wheeloffortune.Create">

    <LinearLayout
        android:id="@+id/id_title"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/id_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="手动创建"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/id_start"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确定"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:layout_marginRight="10dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/id_layout"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_title">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人数"
            android:textSize="30sp"
            android:layout_marginLeft="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="30sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"/>
    </RelativeLayout>

    <com.example.hpf.wheeloffortune.PickerView
        android:id="@+id/id_pick"
        android:layout_width="100dp"
        android:layout_height="300dp"
        android:layout_below="@+id/id_layout"
        android:layout_marginTop="50dp"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:id="@+id/id_name"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/id_layout"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp">

    </LinearLayout>

</RelativeLayout>
